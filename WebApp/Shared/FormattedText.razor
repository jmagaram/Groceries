@using Models
<style>
    span.highlighted {
        background-color: yellow;
        border-width: 0px;
        padding: 0px;
    }

    span.normal {
        border-width: 0px;
        padding: 0px;
    }
</style>
@foreach (var i in Models.FormattedText.spans(Text)) {
    var className = i.Format.IsHighlight ? "highlighted" : "normal";
    <span class="@className">@i.Text</span>
}

@code {
    [Parameter]
    public Models.ViewTypes.FormattedText Text { get; set; }
}
