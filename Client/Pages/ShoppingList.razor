@page "/shoppinglist"

<style>
</style>
<h1>Shopping list</h1>

@foreach (var i in items)
{
    <ItemListItem Item="@i"></ItemListItem>
}

@code {
    private IEnumerable<ViewModelTypes.ListItemViewModel> items;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        items =
            Test.sampleItems.Select(i => ViewModelTypes.createListItemViewModel(i));
    }
}
