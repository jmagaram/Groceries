@inherits LayoutComponentBase
@using Models
@using static Models.StateExtensions
@using GroceriesWasmApp.Client.Services

@if (StateService.State!=null && StateService.State.LoggedInUserSettings().FontSize.IsLargeFontSize) {
    <style>
        body {
            font-size: larger;
        }
    </style>
}
<div class="container-fluid px-0">
    @Body
</div>

@code {
    [Inject]
    public StateService StateService { get; set; }
}